	<!-- session-timeout -->
	<session-config>
		<session-timeout>0</session-timeout>
	</session-config>

	<!-- welcome-file -->
	<welcome-file-list>
		<welcome-file>/login</welcome-file>
	</welcome-file-list>
	
	<resource-ref>
		<description></description>
		<res-ref-name>jdbc/chinaplusDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
